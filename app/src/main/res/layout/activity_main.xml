<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test de connexion"
        android:id="@+id/btnTstConn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ClkTstConn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvStatusConn"
        android:hint="Résultat test connexion "
        android:layout_alignBottom="@+id/btnTstConn"
        android:layout_toRightOf="@+id/btnTstConn"
        android:layout_toEndOf="@+id/btnTstConn"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tfNom"
        android:hint="Indiquer un nom..."
        android:layout_alignRight="@+id/tvStatusConn"
        android:layout_alignEnd="@+id/tvStatusConn"
        android:layout_alignBottom="@+id/tvNomRech" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom à rechercher :"
        android:id="@+id/tvNomRech"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/button"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Lancer la recherche"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="clkRetrieveData" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recherche infos personnes :"
        android:id="@+id/tvTitre"
        android:layout_above="@+id/tfNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prénom : "
        android:id="@+id/tvLibPrenom"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvResPrenom"
        android:layout_above="@+id/tvLibNom"
        android:layout_alignLeft="@+id/tvResNom"
        android:layout_alignStart="@+id/tvResNom"
        android:layout_alignTop="@+id/tvLibPrenom"
        android:layout_alignRight="@+id/tfNom"
        android:layout_alignEnd="@+id/tfNom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom :"
        android:id="@+id/tvLibNom"
        android:layout_below="@+id/tvLibPrenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvResNom"
        android:layout_below="@+id/tvResPrenom"
        android:layout_alignLeft="@+id/tvResDept"
        android:layout_alignStart="@+id/tvResDept"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Département :"
        android:id="@+id/tvLibDept"
        android:layout_below="@+id/tvLibNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvResDept"
        android:layout_alignTop="@+id/tvLibDept"
        android:layout_alignLeft="@+id/tfNom"
        android:layout_alignStart="@+id/tfNom"
        android:layout_alignRight="@+id/tfNom"
        android:layout_alignEnd="@+id/tfNom" />

</RelativeLayout>
